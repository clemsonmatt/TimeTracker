<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <div class="panel panel-default" style="margin-top: 120px;">
                <%= form_tag sessions_path do %>
                    <div class="text-center">
                        <h2 class="text-primary" style="padding-top: 25px;">
                            <span style="position: relative; top: 5px;"><%= material_icon.timer.md_48 %></span>tracker
                        </h2>
                    </div>
                    <div class="panel-body" style="margin-top: 30px;">
                        <div class="input-group" style="margin-bottom: 15px;">
                            <span class="input-group-addon">
                                <i class="material-icons">email</i>
                            </span>
                            <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: 'Email...' %>
                        </div>

                        <div class="input-group" style="margin-bottom: 15px;">
                            <span class="input-group-addon">
                                <i class="material-icons">lock_outline</i>
                            </span>
                            <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password...' %>
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary btn-lg" type="submit">Get Started</button>
                    </div>
                    <br />
                <% end %>
            </div>
        </div>
    </div>
</div>
