<%= render "layout" %>

<ol class="breadcrumb">
    <% if @user == @person %>
        <div class="links">
            <%= link_to logout_path, class: "btn-round btn-round-default btn-round-sm" do %>
                <%= material_icon.power_settings_new.md_18 %>
            <% end %>
        </div>
    <% end %>
    <li><%= link_to "People", person_index_path %></li>
    <li class="active"><%= @person %></li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="pull-right">
            <%= link_to edit_person_path, class: 'btn-round btn-round-md btn-round-warning' do %>
                <%= material_icon.edit %>
            <% end %>
        </div>
        <%= material_icon.account_circle %>
        <%= @person %>
    </div>
    <div class="panel-body">
        <%= @person.email %>
        <br />
        <%= @person.phone %>
    </div>
</div>

<div class="row">
    <div class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= material_icon.update %>
                Recent Entries
            </div>
            <%= render "/entry/entries", entries: @entries %>
        </div>
    </div>
    <div class="col-md-7">
        <div class="panel panel-default">
            <div class="panel-body">
                chart
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <%= material_icon.work %>
                        My Projects
                    </div>
                    <%= render "project/projects" %>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <%= material_icon.group_work %>
                        Shared Projects
                    </div>
                    <div class="panel-body">
                        None
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
