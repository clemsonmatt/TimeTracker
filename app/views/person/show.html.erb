<ol class="breadcrumb">
    <li><%= link_to "People", person_index_path %></li>
    <li class="active"><%= @person %></li>
</ol>


<div class="panel panel-default">
    <div class="panel-body">
        <h3 class="text-primary">
            <div class="pull-right">
                <%= link_to edit_person_path, class: 'btn-round' do %>
                    <%= material_icon.edit %>
                <% end %>
            </div>
            <%= @person %>
        </h3>
        <p>
            <%= @person.email %>
            <br />
            <%= @person.phone %>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">Recent Entries</div>
            <table class="table table-striped table-hover">
                <% for i in [1,2,3,4,5] %>
                    <tr>
                        <td class="col-md-6">
                            <h4>Entry <%= i %></h4>
                            <p class="text-muted">
                                Here is the description
                            </p>
                        </td>
                        <td class="col-md-6">
                            <h2 class="text-primary pull-right">02:23</h2>
                        </td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-body">
                chart
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">Projects</div>

                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">Teams</div>

                </div>
            </div>
        </div>
    </div>
</div>
