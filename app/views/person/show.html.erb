<ol class="breadcrumb">
    <% if @user == @person %>
        <div class="links">
            <%= link_to logout_path, class: "btn-round btn-round-sm" do %>
                <%= material_icon.power_settings_new.md_18 %>
            <% end %>
        </div>
    <% end %>
    <li><%= link_to "People", person_index_path %></li>
    <li class="active"><%= @person %></li>
</ol>


<div class="panel panel-default">
    <div class="panel-body">
        <h3 class="text-primary">
            <div class="pull-right">
                <%= link_to edit_person_path, class: 'btn-round' do %>
                    <%= material_icon.edit %>
                <% end %>
            </div>
            <%= @person %>
        </h3>
        <p>
            <%= @person.email %>
            <br />
            <%= @person.phone %>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= material_icon.update %>
                Recent Entries
            </div>
            <table class="table table-striped table-hover">
                <% if @entries.to_s.length > 0 %>
                    <% @entries.each do |e| %>
                        <tr>
                            <td>
                                <h4 class="list-group-item-header">
                                    <%= e.title %>
                                    <small>
                                        <% if e.end == nil || e.start.strftime('%m/%d/%y') == e.end.strftime('%m/%d/%y') %>
                                            <%= e.start.strftime('%m/%d/%y') %>
                                        <% else %>
                                            <%= e.start.strftime('%m/%d/%y') %> &mdash; <%= e.end.strftime('%m/%d/%y') %>
                                        <% end %>
                                    </small>
                                </h4>
                                <% if e.description %>
                                    <p class="list-group-item-body text-muted">
                                        <%= e.description %>
                                    </p>
                                <% end %>
                            </td>
                            <td class="text-center" style="width: 1%;">
                                <h4 class="js-entry-time-ellapsed" data-start-time="<%= e.start %>"></h4>
                                <a href="" class="btn-round btn-round-danger btn-round-sm pull-right" style="margin: -5px 15px 0px 0px;">
                                    <%= material_icon.stop.md_18 %>
                                </a>
                                <a href="" class="btn-round btn-round-default btn-round-sm" style="margin: -5px 0px 0px 15px;">
                                    <%= material_icon.pause.md_18 %>
                                </a>
                            </td>
                        </tr>
                    <% end %>
                <% else %>
                    <tr>
                        <td>
                            None
                        </td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-body">
                chart
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <%= material_icon.work %>
                        Projects
                    </div>
                    <div class="panel-body">
                        None
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <%= material_icon.group_work %>
                        Teams
                    </div>
                    <div class="panel-body">
                        None
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <%= material_icon.star %>
                        Clents
                    </div>
                    <div class="panel-body">
                        None
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
