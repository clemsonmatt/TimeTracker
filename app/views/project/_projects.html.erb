<table class="table table-striped table-hover">
    <% if @projects.to_s.length > 0 %>
        <% @projects.each do |proj| %>
            <tr>
                <td>
                    <h4 class="list-group-item-header" style="line-height: 20px;">
                        <%= proj.title %>
                    </h4>
                    <% if proj.description %>
                        <p class="list-group-item-body text-muted" style="line-height: 15px;">
                            <%= proj.description %>
                        </p>
                    <% end %>
                </td>
                <td class="text-center" style="width: 120px;">
                    <% if proj.status == 'locked' %>
                        <h4>4 entries</h4>
                        <center class="text-muted">
                            <%= material_icon.lock %>
                        </center>
                    <% else %>
                        <h4>4 entries</h4>
                        <%= link_to project_path(proj), class: "btn-round btn-round-default btn-round-sm pull-left", style: "margin-right: 9px" do %>
                            <%= material_icon.description.md_18 %>
                        <% end %>
                        <%= link_to edit_project_path(proj), class: "btn-round btn-round-warning-simple btn-round-sm pull-left", style: "margin-right: 9px" do %>
                            <%= material_icon.edit.md_18 %>
                        <% end %>
                        <a href="" class="btn-round btn-round-grey-simple btn-round-sm pull-left" style="margin-right: 9px">
                            <%= material_icon.lock.md_18 %>
                        </a>
                    <% end %>
                </td>
            </tr>
        <% end %>
    <% else %>
        <tr>
            <td>
                None
            </td>
        </tr>
    <% end %>
</table>
