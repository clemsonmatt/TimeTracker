<%= render "layout" %>

<ol class="breadcrumb">
    <li><%= link_to 'Projects', new_project_path %></li>
    <li><%= link_to @project.title, project_path(@project) %></li>
    <li class="active">Edit Project</li>
</ol>

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= material_icon.update %>
                Recent Projects
            </div>
            <%= render "projects" %>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="pull-right">
                    <%= link_to project_path(@project), method: :delete, class: "btn-round btn-round-md btn-round-danger" do %>
                        <%= material_icon.delete_forever %>
                    <% end %>
                </div>
                <%= material_icon.add %>
                Edit Project
            </div>
            <div class="panel-body">
                <% if @project.errors.any? %>
                    <div id="error_explanation">
                        <h4 class="text-danger">
                            <%= pluralize(@project.errors.count, "error") %> prohibited this person from being saved:
                        </h4>
                        <ul>
                            <% @project.errors.full_messages.each do |msg| %>
                                <li class="text-danger"><%= msg %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>

                <%= bootstrap_form_for @project, url: {action: "update"}, method: :patch do |f| %>
                    <%= f.text_field :title, class: "form-control" %>
                    <%= f.text_area :description, class: "form-control" %>
                    <br />
                    <button class="btn btn-primary">Save Project</button>
                <% end %>
            </div>
        </div>
    </div>
</div>
