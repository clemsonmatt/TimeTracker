<%= render "layout" %>

<ol class="breadcrumb">
    <div class="links">
        <%= link_to edit_project_path(@project), class: "btn-round btn-round-sm btn-round-warning-simple" do %>
            <%= material_icon.edit.md_18 %>
        <% end %>
    </div>
    <li><%= link_to 'Projects', new_project_path %></li>
    <li class="active"><%= @project %></li>
</ol>

<div class="row">
    <div class="col-md-6">
        <h2><%= @project %></h2>
        <blockquote><%= @project.description %></blockquote>
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= material_icon.multiline_chart %>
                Analytics
            </div>
            <div class="panel-body"></div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= material_icon.insert_chart %>
                Reports
            </div>
            <div class="panel-body"></div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= material_icon.timer %>
                Entries
            </div>
            <%= render "entry/entries", entries: @project.entries %>
        </div>
    </div>
</div>
